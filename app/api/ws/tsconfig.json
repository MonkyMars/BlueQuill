{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "typeRoots": ["../../../types", "../../../node_modules/@types"],
    "noImplicitAny": false,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["./**/*", "../../../types/**/*.d.ts"],
  "exclude": ["node_modules"]
} 